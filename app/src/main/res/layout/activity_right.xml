<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:baselineAligned="false">
    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:ignore="UselessParent">

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.3"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                app:cardCornerRadius="10dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <com.example.lkmagneticrobot.view.BaseTitle
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        app:text_header_is_left_iv_visiable="true"
                        app:text_header_title="@string/work_data" />
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                        <TextView
                                style="@style/TextName"
                                android:text="@string/work_current" />

                        <EditText
                                android:id="@+id/etWorkCurrent"
                                style="@style/EditText"
                                android:enabled="false"
                                android:inputType="number" />
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                        <TextView
                                style="@style/TextName"
                                android:text="@string/run_distance" />

                        <EditText
                                android:id="@+id/etDistance"
                                style="@style/EditText"
                                android:enabled="false"
                                android:inputType="number" />
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                        <TextView
                                style="@style/TextName"
                                android:text="@string/run_speed" />

                        <EditText
                                android:id="@+id/etSpeed"
                                style="@style/EditText"
                                android:enabled="false"
                                android:inputType="number" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                            <TextView
                                    style="@style/TextName"
                                    android:text="@string/run_type" />

                            <EditText
                                    android:id="@+id/etRunType"
                                    style="@style/EditText"
                                    android:enabled="false"
                                    android:inputType="number" />
                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                            <TextView
                                    style="@style/TextName"
                                    android:text="@string/frequency" />

                            <EditText
                                    android:id="@+id/etFrequency"
                                    style="@style/EditText"
                                    android:enabled="false"
                                    android:inputType="number" />
                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                            <TextView
                                    style="@style/TextName"
                                    android:text="@string/battery_level" />

                            <com.example.lkmagneticrobot.view.BatteryView
                                    android:id="@+id/batteryView"
                                    android:layout_width="70dp"
                                    android:layout_height="25dp"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginLeft="15dp"
                                    android:layout_gravity="left"/>
                        </LinearLayout>
                    </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.3"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="2dp"
                app:cardCornerRadius="10dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp">
                    <com.example.lkmagneticrobot.view.BaseTitle
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            app:text_header_is_left_iv_visiable="true"
                            app:text_header_title="@string/show_control" />

                    <com.example.lkmagneticrobot.view.BaseButton
                            android:id="@+id/btnSettingController"
                            style="@style/BaseButton"
                            android:layout_gravity="right|center"
                            android:layout_width="80dp"
                            android:layout_marginRight="10dp"
                            android:text="@string/btn_sure"
                            app:bg_corner="5dp"/>
                </FrameLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                        <TextView
                                style="@style/TextName"
                                android:text="@string/protect_battery" />

                        <EditText
                                android:id="@+id/etProtectBattery"
                                style="@style/EditText"
                                android:inputType="number" />
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                        <TextView
                                style="@style/TextName"
                                android:text="@string/protect_current" />

                        <EditText
                                android:id="@+id/etProtectCurrent"
                                style="@style/EditText"
                                android:inputType="number|numberDecimal" />
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                        <TextView
                                style="@style/TextName"
                                android:text="@string/limitation_speed" />

                        <EditText
                                android:id="@+id/etLimitationSpeed"
                                style="@style/EditText"
                                android:inputType="number|numberDecimal" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                        <TextView
                                style="@style/TextName"
                                android:text="@string/searchlight_control" />

                        <com.kyleduo.switchbutton.SwitchButton
                                android:id="@+id/sbSearchlight"
                                style="@style/SwitchButtonStyle"
                                app:kswTextAdjust="-2dp"
                                app:kswTextExtra="8dp"
                                app:kswTextOff="@string/open"
                                app:kswTextOn="@string/close"
                                app:kswTintColor="@color/theme_color" />
                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                        <TextView
                                style="@style/TextName"
                                android:text="自动识别" />

                        <com.kyleduo.switchbutton.SwitchButton
                                style="@style/SwitchButtonStyle"
                                app:kswTextAdjust="-2dp"
                                app:kswTextExtra="8dp"
                                app:kswTextOff="@string/open"
                                app:kswTextOn="@string/close"
                                app:kswTintColor="@color/theme_color" />
                    </LinearLayout>

                    <LinearLayout
                            android:id="@+id/linYoke"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                        <TextView
                                style="@style/TextName"
                                android:text="@string/black_white_control" />
                        <com.example.lkmagneticrobot.view.BaseButton
                                android:id="@+id/etYoke"
                                style="@style/EditText"
                                android:text="@string/light_white"
                                android:inputType="number|numberDecimal"
                                app:bg_corner="10dp"/>


                        <com.kyleduo.switchbutton.SwitchButton
                                android:id="@+id/sbYoke"
                                android:visibility="gone"
                                style="@style/SwitchButtonStyle"
                                app:kswTextAdjust="-2dp"
                                app:kswTextExtra="8dp"
                                app:kswTextOff="@string/light_black"
                                app:kswTextOn="@string/light_white"
                                app:kswTintColor="@color/theme_color" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.3"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="4dp"
                app:cardCornerRadius="10dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp">
                    <com.example.lkmagneticrobot.view.BaseTitle
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            app:text_header_is_left_iv_visiable="true"
                            app:text_header_title="@string/parameter_settings" />

                    <com.example.lkmagneticrobot.view.BaseButton
                            android:id="@+id/btnSettingParam"
                            style="@style/BaseButton"
                            android:layout_gravity="right|center"
                            android:layout_width="80dp"
                            android:layout_marginRight="10dp"
                            android:text="@string/btn_sure"
                            app:bg_corner="5dp"/>
                </FrameLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">
                        <TextView
                                style="@style/TextName"
                                android:text="@string/auto_speed" />
                        <EditText
                                android:id="@+id/etAutoSpeed"
                                style="@style/EditText"
                                android:inputType="number|numberDecimal" />
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                        <TextView
                                style="@style/TextName"
                                android:text="@string/auto_distance" />

                        <EditText
                                android:id="@+id/etAutoDistance"
                                style="@style/EditText"
                                android:inputType="numberDecimal" />
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                        <TextView
                                style="@style/TextName"
                                android:text="@string/magnetic_distance" />

                        <EditText
                                android:id="@+id/etMagneticDistance"
                                style="@style/EditText"
                                android:inputType="number" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                        <TextView
                                style="@style/TextName"
                                android:text="@string/magnetic_time" />

                        <EditText
                                android:id="@+id/etMagneticTime"
                                style="@style/EditText"
                                android:inputType="number" />
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                        <TextView
                                style="@style/TextName"
                                android:text="@string/spray_time" />

                        <EditText
                                android:id="@+id/etSprayTime"
                                style="@style/EditText"
                                android:inputType="number" />
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                        <TextView
                                style="@style/TextName"
                                android:text="@string/spray_interval" />

                        <EditText
                                android:id="@+id/etSprayInterval"
                                style="@style/EditText"
                                android:inputType="number" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                app:cardCornerRadius="10dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <com.example.lkmagneticrobot.view.BaseTitle
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        app:text_header_is_left_iv_visiable="true"
                        app:text_header_title="@string/function_buttons" />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                    <com.example.lkmagneticrobot.view.BaseButton
                            android:id="@+id/btnCamer"
                            style="@style/EditText"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/camer"
                            app:bg_corner="10dp" />

                    <com.example.lkmagneticrobot.view.BaseButton
                            android:id="@+id/btnStartVideo"
                            style="@style/EditText"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/video"
                            app:bg_corner="10dp" />
                    <com.example.lkmagneticrobot.view.BaseButton
                            android:id="@+id/btnStopVideo"
                            style="@style/EditText"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/stop"
                            app:bg_corner="10dp"
                            android:visibility="gone"
                            app:bg_color="@color/red"/>

                    <com.example.lkmagneticrobot.view.BaseButton
                            android:id="@+id/btnFile"
                            style="@style/EditText"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/folder"
                            android:layout_marginRight="15dp"
                            app:bg_corner="10dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>