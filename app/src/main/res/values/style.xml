<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 自定义横向分割线属性   -->
    <style name="HLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/theme_color</item>
        <!--        <item name="android:layout_marginRight">5dp</item>-->
        <!--        <item name="android:layout_marginLeft">5dp</item>-->
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <!-- 自定义纵向分割线属性   -->
    <style name="Vine">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/theme_color</item>
        <!--        <item name="android:layout_marginRight">5dp</item>-->
        <!--        <item name="android:layout_marginLeft">5dp</item>-->
    </style>

    <declare-styleable name="BaseTitle">
        <attr name="text_header_title" format="string" />
        <attr name="text_header_is_title_visiable" format="boolean" />
        <attr name="text_header_is_left_iv_visiable" format="boolean" />
    </declare-styleable>
    <!-- 自定义TextView属性   -->
    <style name="TextTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/theme_color</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12dp</item>
        <item name="android:paddingLeft">4dp</item>
    </style>

    <!-- 自定义TextView属性   -->
    <style name="TextName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textColor">@color/theme_color</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:gravity">center|left</item>
        <item name="android:textSize">13dp</item>
    </style>

    <!-- 自定义SwitchButton属性   -->
    <style name="SwitchButtonStyle">
        <item name="android:layout_width">105dp</item>
        <item name="android:layout_gravity">top|left</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--自定义EditText-->
    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/linelayout_black_radion</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center|left</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- 自定义Button控件的属性-->
    <declare-styleable name="BaseButton">
        <!-- 背景颜色-->
        <attr name="bg_color" format="color" />
        <!-- 圆角大小-->
        <attr name="bg_corner" format="dimension" />
        <!-- 是否可以点击-->
        <attr name="bg_client" format="boolean" />
    </declare-styleable>
    <!-- 自定义BaseButton属性   -->
    <style name="BaseButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">13dp</item>
        <item name="lineHeight">13dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
    </style>


</resources>